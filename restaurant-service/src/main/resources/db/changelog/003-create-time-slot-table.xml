<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="003-create-time-slot-table" author="restaurant-system">
        <comment>Create time_slot table for managing restaurant reservations</comment>

        <createTable tableName="time_slot">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="table_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="party_size" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="AVAILABLE">
                <constraints nullable="false"/>
            </column>
            <column name="customer_name" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="customer_email" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="customer_phone" type="VARCHAR(20)">
                <constraints nullable="true"/>
            </column>
            <column name="special_requests" type="VARCHAR(500)">
                <constraints nullable="true"/>
            </column>
            <column name="reservation_notes" type="VARCHAR(500)">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="confirmed_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="cancelled_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="version" type="BIGINT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Foreign key constraint -->
        <addForeignKeyConstraint
                baseTableName="time_slot"
                baseColumnNames="table_id"
                constraintName="fk_time_slot_table"
                referencedTableName="restaurant_table"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <!-- Indexes for performance -->
        <createIndex tableName="time_slot" indexName="idx_time_slot_table_date">
            <column name="table_id"/>
            <column name="date"/>
        </createIndex>

        <createIndex tableName="time_slot" indexName="idx_time_slot_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="time_slot" indexName="idx_time_slot_customer_email">
            <column name="customer_email"/>
        </createIndex>

        <createIndex tableName="time_slot" indexName="idx_time_slot_date_time">
            <column name="date"/>
            <column name="start_time"/>
            <column name="end_time"/>
        </createIndex>

        <!-- Check constraint for valid status values -->
        <sql>
            ALTER TABLE time_slot ADD CONSTRAINT chk_time_slot_status
            CHECK (status IN ('AVAILABLE', 'RESERVED', 'CONFIRMED', 'CANCELLED', 'COMPLETED', 'NO_SHOW'));
        </sql>

        <!-- Check constraint for valid times -->
        <sql>
            ALTER TABLE time_slot ADD CONSTRAINT chk_time_slot_times
            CHECK (start_time &lt; end_time);
        </sql>

        <!-- Check constraint for valid party size -->
        <sql>
            ALTER TABLE time_slot ADD CONSTRAINT chk_time_slot_party_size
            CHECK (party_size &gt; 0 AND party_size &lt;= 20);
        </sql>

        <rollback>
            <dropTable tableName="time_slot"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
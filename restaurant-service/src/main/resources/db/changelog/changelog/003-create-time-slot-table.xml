<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="003-create-time-slot-table" author="restaurant-system">
        <comment>Create time_slot table</comment>

        <createTable tableName="time_slot">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="table_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="party_size" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="AVAILABLE">
                <constraints nullable="false"/>
            </column>
            <column name="customer_name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="customer_phone" type="VARCHAR(20)">
                <constraints nullable="true"/>
            </column>
            <column name="customer_email" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="special_requests" type="VARCHAR(1000)">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="time_slot"
                baseColumnNames="table_id"
                constraintName="fk_time_slot_restaurant_table"
                referencedTableName="restaurant_table"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <createIndex tableName="time_slot" indexName="idx_time_slot_table_id">
            <column name="table_id"/>
        </createIndex>

        <createIndex tableName="time_slot" indexName="idx_time_slot_date">
            <column name="date"/>
        </createIndex>

        <createIndex tableName="time_slot" indexName="idx_time_slot_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="time_slot" indexName="idx_time_slot_date_time">
            <column name="date"/>
            <column name="start_time"/>
            <column name="end_time"/>
        </createIndex>

        <createIndex tableName="time_slot" indexName="idx_time_slot_customer_email">
            <column name="customer_email"/>
        </createIndex>

        <addUniqueConstraint
                tableName="time_slot"
                columnNames="table_id, date, start_time, end_time"
                constraintName="uk_time_slot_unique"/>

        <rollback>
            <dropTable tableName="time_slot"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
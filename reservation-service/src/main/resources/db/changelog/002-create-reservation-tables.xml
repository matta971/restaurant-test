<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-reservations-table" author="reservation-service">
        <createTable tableName="reservations">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="customer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="restaurant_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="table_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="reservation_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="party_size" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>
            <column name="special_requests" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="confirmed_at" type="TIMESTAMP"/>
            <column name="cancelled_at" type="TIMESTAMP"/>
            <column name="cancellation_reason" type="VARCHAR(500)"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="reservations"
                baseColumnNames="customer_id"
                constraintName="fk_reservations_customer"
                referencedTableName="customers"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addCheckConstraint
                tableName="reservations"
                constraintName="ck_reservations_party_size"
                checkCondition="party_size > 0 AND party_size <= 12"/>

        <addCheckConstraint
                tableName="reservations"
                constraintName="ck_reservations_times"
                checkCondition="start_time < end_time"/>
    </changeSet>

</databaseChangeLog>
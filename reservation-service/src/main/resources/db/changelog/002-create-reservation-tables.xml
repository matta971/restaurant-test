<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-reservations-table" author="reservation-service">
        <createTable tableName="reservations">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="customer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="restaurant_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="table_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="reservation_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="party_size" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>
            <column name="special_requests" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="confirmed_at" type="TIMESTAMP"/>
            <column name="cancelled_at" type="TIMESTAMP"/>
            <column name="cancellation_reason" type="VARCHAR(500)"/>
        </createTable>
    </changeSet>

    <changeSet id="002-add-foreign-keys-reservations" author="reservation-service">
        <addForeignKeyConstraint
                baseTableName="reservations"
                baseColumnNames="customer_id"
                constraintName="fk_reservations_customer"
                referencedTableName="customers"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="002-add-check-constraints-reservations" author="reservation-service">
        <!-- H2-compatible constraint syntax -->
        <sql>
            ALTER TABLE reservations ADD CONSTRAINT ck_reservations_party_size CHECK (party_size > 0 AND party_size &lt;= 12);
        </sql>

        <sql>
            ALTER TABLE reservations ADD CONSTRAINT ck_reservations_times CHECK (start_time &lt; end_time);
        </sql>

        <sql>
            ALTER TABLE reservations ADD CONSTRAINT ck_reservations_status
            CHECK (status IN ('PENDING', 'CONFIRMED', 'CANCELLED', 'COMPLETED', 'NO_SHOW'));
        </sql>
    </changeSet>

    <changeSet id="002-add-indexes-reservations" author="reservation-service">
        <createIndex indexName="idx_reservations_customer" tableName="reservations">
            <column name="customer_id"/>
        </createIndex>

        <createIndex indexName="idx_reservations_restaurant" tableName="reservations">
            <column name="restaurant_id"/>
        </createIndex>

        <createIndex indexName="idx_reservations_table" tableName="reservations">
            <column name="table_id"/>
        </createIndex>

        <createIndex indexName="idx_reservations_date" tableName="reservations">
            <column name="reservation_date"/>
        </createIndex>

        <createIndex indexName="idx_reservations_status" tableName="reservations">
            <column name="status"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
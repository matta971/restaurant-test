<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-add-additional-reservation-indexes" author="reservation-service">
        <comment>Add additional performance indexes for reservations</comment>

        <createIndex indexName="idx_reservations_restaurant_date" tableName="reservations">
            <column name="restaurant_id"/>
            <column name="reservation_date"/>
        </createIndex>

        <createIndex indexName="idx_reservations_table_date_time" tableName="reservations">
            <column name="table_id"/>
            <column name="reservation_date"/>
            <column name="start_time"/>
        </createIndex>

        <createIndex indexName="idx_reservations_created_at" tableName="reservations">
            <column name="created_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>